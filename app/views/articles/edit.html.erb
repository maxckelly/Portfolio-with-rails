<h1> Edit Article </h1>

<% if @article.errors.any? %>
  <h2> The following errors prevented the article from saving: </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |field| %>
  <p> 
    <%= field.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= field.label :description %><br>
    <%= field.text_area :description %>
  </p>
  <p>
    <%= field.submit %>
  </p>
<% end %>