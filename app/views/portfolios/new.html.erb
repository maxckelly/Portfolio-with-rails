<%= form_with model: @portfolio, local:true do |form| %>

  <div>
    <%= form.label :header %>
    <%= form.text_field :header %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description%>
  </div>

  <div>
    <%= form.label :url %>
    <%= form.text_field :url%>
  </div>

  <div>
    <%= form.label :picture %>
    <%= form.file_field :picture, accept: "image/png,image/gif,image/jpg,image/jpeg"%>
  </div>

  <div>
    <%= form.submit%>
  </div>

<% end %>